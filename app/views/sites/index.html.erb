<p id="notice"><%= notice %></p>

<h1>Sites</h1>

<p>
<%= link_to 'New Site', new_site_path %>
</p>

<%= page_entries_info @sites %>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Url</th>
      <th>Seed url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.category_id %></td>
        <td><%= site.name %></td>
        <td><%= site.url %></td>
        <td><%= site.feed_url %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @sites %>
