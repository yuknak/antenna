<table align="center" class="oldentry">
<tr>
    <td height="30" colspan="2">
        <div style="width:130px;float:left;text-align:left;padding:0px 5px;">
            <img src="<%=  @site.category.icon_url %>">
        </div>
        <div style="width:680px;float:left;text-align:left;font-size:12pt;font-weight: bold;">
            <img src="<%= @site.icon_url %>" style="vertical-align:-0.12em;">
             <a href="/out?s=<%= @site.id %>&u=<%= @site.url %>" title="<%= @site.name %>" style="color:#CCFFFF;"><%= @site.name %></a>
        </div>
    </td>
</tr>
<tr>
    <td height="130" colspan="2">
        <div style="width:130px;height:130px;float:left;">
            <a href="/out?s=<%= @site.id %>&u=<%= @site.url %>" title="<%= @site.name %>">
                <img src="<%= @site.thumbnail_url %>">
            </a>
        </div>
        <div style="width:680px;float:left;text-align:center;">
            <div id="chart_div" style="width: 690px; height: 130px;">
            </div>
        </div>
        <div style="clear:both;">
         </div>
    </td>
</tr>
<tr>
    <td height="30" colspan="2">
        <span style="font-size:11pt;">最新14日分 - <%= @articles.length %> 件</span>
    </td>
</tr>
<% @articles.each do |article| %>
<tr>
    <td class="date"><%= article.post_time&.localtime&.strftime("%m/%d %H:%M") %></td>
    <td class="title">
        <div class="entry">
            <div class="entry_bar">
                <img src="/design1/bar.png" width="99%" height="24px">
            </div>
        <div class="entry_text">
            <a href="/out?s=<%= article.site&.id %>&a=<%= article.id %>&u=<%= article.url %>" class="title" title="<%= article.name %>"><%= article.name %></a>
        </div>
        </div>
    </td>
</tr>
<% end %>
</table>


