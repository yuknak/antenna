<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<p>
<%= link_to 'New Category', new_admin_category_path %>
</p>

<p>
<%= page_entries_info @categories %>
</p>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Icon</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= if category.icon_url.present? then image_tag category.icon_url else "N/A" end %></td>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', admin_category_path(category) %></td>
        <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
        <td><%= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
<%= paginate @categories %>
</p>
