<div id="headline">
<table class="hl">
<tr><td colspan="5" height="16" align="center" valign="top" bgcolor="#444444">
<span style="font-size:10pt;">最新記事情報 - <%= Article.order('pull_time desc').limit(1)[0].pull_time&.localtime&.strftime("%m/%d %H:%M") %></span>
</td></tr>
<!--FRESH_ENTRY-->

<% @articles.each do |article| %>
    <tr class="hl">
    <td class="hl_d"><%= article.post_time&.localtime.strftime("%m/%d %H:%M") %></td>
    <td class="hl_c">
        <img src="<%= article.site&.category&.icon_url %>" alt="">
    </td>
    <td class="hl_t">
        <a href="/out?s=<%= article.site&.id %>&a=<%= article.id %>&u=<%= article.url %>" class="hl"><%= article.name %></a>
    </td>
    <td class="hl_f">
        <img src="<%= article.site&.icon_url %>" alt="f">
    </td>
    <td class="hl_n">
        <a href="/out?s=<%= article.site&.id %>&u=<%= article.site&.url %>" class="hl"><%= article.site&.name %></a>
    </td>
    </tr>
<% end %>

</table>
