</div>

<br>

<% i = 0 %>
<% @sites.each do |site| %>
<% articles = @site_articles.shift %>
<table align="center" class="bloginfo">
    <tr>
        <td height="30" colspan="3" class="summary">
            <div class="rank">
                <img src="<%= site.icon_url %>" alt="f" class="va"> 
                    <span style="font-size:12pt;"><%= i += 1 %> 位 (→)</span>
            </div>
            <div class="rank_name">
                <img src="<%= site.category&.icon_url %>" alt="<%= site.category&.name %>" class="va"> 
                    <a href="/out?s=<%= site.id %>&u=<%= site.url %>" class="blogname"> <%= site.name %></a> 
                    <a href="/old?s=<%= site.id %>" style="font-size:8pt;">[一覧]</a>
            </div>
            <div class="rank_inout"><%= site.week_in_count %> in / <%= site.week_out_count %> out</div>
            <div class="clear"></div>
        </td>
    </tr>
    <tr>
        <td rowspan="6" width="120">
            <a href="/out?s=<%= site.id %>&u=<%= site.url %>">
                <img title=" <%= site.name %>" src="<%= site.thumbnail_url %>" width="120" height="120">
            </a>
        </td>
    </tr>
<% articles.each do |article| %>
    <tr>
        <td class="date"><%= article.post_time&.localtime&.strftime("%m/%d %H:%M") %></td>
        <td class="title">
            <div class="entry">
                <div class="entry_bar">
                    <img src="http://moudamepo.com/img/bar.png" alt="bar" width="99%" height="24">
                </div>
                <div class="entry_text">
                    <a href="/out?s=<%= article.site&.id %>&a=<%= article.id %>&u=<%= article.url %>" class="title"><%= article.name %></a>
                </div>
            </div>
        </td>
    </tr>
<% end %>
</table>
<br/>
<% end %>

